<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - D Delivery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DMSystemMvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-1.11.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-3.5.1.min.js"></script>
</head>
<style>
    a:hover{
        background-color:gainsboro;
    }
</style>


@*background-image: url('img/d-delivery1.jpg');*@
<body>
    <header style="font-weight:bold">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Registration" asp-action="Login">
                    <img src="~/img/d-delivery.png" style="width: 35px;height: 35px;" />
                    D Delivery
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>*@
                        <li class="nav-item" id="liAddBooking">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="Create"><span><i class="fa fa-plus"></i> </span> Add Booking</a>
                        </li>
                        <li class="nav-item" id="liViewBooking">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="BookingList"><span><i class="fa fa-list"></i> </span> View Booking</a>
                        </li>
                        
                        @*<li class="nav-item" id="liLogout">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Registration" asp-action="Logout">Logout</a>
                        </li>*@
                    </ul>
                    <partial name="_PartialLogin" />
                </div>
            </div>
        </nav>
    </header>
    @*style=" background-color:black"*@
    <div class="container" >
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - D Delivery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    

    @*<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
