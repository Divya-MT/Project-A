@model DMSystemMvc.Models.Login
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Login</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <select asp-for="RegistrationType" id="RegistrationType" name="RegistrationType" class="control-label">
                    <option value="Executive">Executive</option>
                    <option value="Customer">Customer</option>
                </select>
                <span asp-validation-for="RegistrationType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label" ></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group" style="padding-top:10px">
                <input type="submit" value="Login" class="btn btn-success" />
                <a asp-action="Registration" asp-controller="Registration" class="btn btn-primary">Register Here</a>
            </div>
            @*<p>
                <a asp-action="Registration" asp-controller="Registration" class="btn btn-primary">Register Here</a>
            </p>*@
        </form>
    </div>
</div>

